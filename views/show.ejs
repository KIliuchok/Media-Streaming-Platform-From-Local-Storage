<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head.ejs') %>
</head>
<body>
    <div class="app">
        <header>
            <%- include('navbar.ejs') %>
        </header>
        
        <h1>List of All Episodes for <%= showName %> </h1>

        <div class="row row-cols-2 row-cols-md-2 g-10">

            <% for (var i = 0; i < list_of_eps.length; i ++) { %>
                <a href="<%= `/shows/${showName}/${list_of_eps[i]}` %>">
                <div class="col">
                    <div class="card">
                      <img src="<%= ep_images[i] %>" class="bd-placeholder-img" width=600 alt="<%= list_of_eps[i] %>" >
                      <div class="card-body">
                        <h5 class="card-title"><%= list_of_eps[i].slice(0, list_of_eps[i].length - 4) %></h5>
                      </div>
                    </div>
                  </div>
                </a>
            <% } %>
        </div>
        <footer>
            <a href="https://github.com/KIliuchok/" class="navbar brand mb-0">GitHub Profile</a>
        </footer>
    </div>
</body>
</html>
